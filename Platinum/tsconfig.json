{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": false,
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "build",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["build", "node_modules"]
}
